{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module": "amd",
    "noLib": true, // Prevent use of HTML5 bindings

    "strictNullChecks": true,
    "noImplicitAny": true,

    "outFile": "lib/build.js",
    "types": [ "src/typings.d.ts" ],
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}